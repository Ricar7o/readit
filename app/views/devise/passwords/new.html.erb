<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= f.email_field :email, :autofocus => true, :class => "input-xlarge", :placeholder => "Email address" %>
  <br>
  <%= f.submit "Send me reset instructions", :class => "btn" %>
<% end %>

<%= render "devise/shared/links" %>
