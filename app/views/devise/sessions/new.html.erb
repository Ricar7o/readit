<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { :class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Log in</h2>
  <%= f.email_field :email, :autofocus => true, :class => "input-xlarge", :placeholder => "Email address" %>
  <br>
  <%= f.password_field :password, :class => "input-xlarge", :placeholder => "Password" %>
  <br>
  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %>
      Remember me
      
    </label>
  <% end -%>

  <div><%= f.submit "Log in", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
